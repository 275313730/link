<template id="cpn">
    <div class="cpn">
        <img each="src of props.srcs" @click="jump(index)" $src="src.url"></img>
    </div>
</template>

<script>
    Link.component({
        name: 'cpn',
        template: cpn,
        methods: {
            jump(index) {
                const url = this.props.srcs[index].url
                Link.$router.$push('img', url.slice(url.lastIndexOf('/')))
            }
        }
    })
</script>

<style>
    .cpn {
        position: relative;
        width: 30%;
        margin: auto;
    }

    img {
        width: 100%;
        cursor: pointer;
    }
</style>